import {
    VerticalBox,
    HorizontalBox,
    LineEdit,
    Button,
} from "std-widgets.slint";

export component LoginWindow inherits Window {
    width: 420px;
    height: 300px;
    title: "Login";

    in-out property <string> usuario;
    in-out property <string> senha;

    callback entrar();

    VerticalBox {
        spacing: 16px;
        padding: 24px;

        Text {
            text: "Acesso ao Sistema";
            font-size: 20px;
            horizontal-alignment: center;
        }

        VerticalBox {
            spacing: 8px;

            Text {
                text: "Usuário"; 
            }

            LineEdit {
                text <=> usuario;
                placeholder-text: "Digite seu usuário";
            }
        }

        VerticalBox {
            spacing: 8px;

            Text {
                text: "Senha";
            }

            LineEdit {
                text <=> senha;
                input-type: password;
            }
        }

        HorizontalBox {
            spacing: 12px;

            Button {
                text: "Entrar";
                clicked => {
                    entrar();
                }
            }

            Button {
                text: "Cancelar";
            }
        }
    }
}
